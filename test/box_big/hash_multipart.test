# output all rows
lua_code = """
function box.select_all(space)
    space = tonumber(space)
    local result = {}
        for k, v in box.space[space]:pairs() do
            table.insert(result, v)
    end
    return unpack(result)
end
"""
exec admin "lua " + lua_code.replace('\n', ' ')
sql.sort = True
exec sql "call box.select_all('13')"
sql.sort = False

# primary index select
exec admin "lua box.select(13, 0, 1, 'foo', 0)"
exec admin "lua box.select(13, 0, 1, 'bar', 0)"
# primary index slect with missing part
exec admin "lua box.select(13, 0, 1, 'foo')"
# primary index slect with extra part
exec admin "lua box.select(13, 0, 1, 'foo', 0, 0)"
# primary index select with wrong type
exec admin "lua box.select(13, 0, 1, 'foo', 'baz')"

# secondary index select
exec admin "lua box.select(13, 1, 1, 4)"
# secondary index select with no such key
exec admin "lua box.select(13, 1, 1, 5)"
# secondary index select with missing part
exec admin "lua box.select(13, 1, 1)"
# secondary index select with wrong type
exec admin "lua box.select(13, 1, 1, 'baz')"

# cleanup
exec admin "lua box.space[13]:truncate()"
exec admin "lua box.space[13]:len()"
